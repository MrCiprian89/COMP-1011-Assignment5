<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.assignment5_bmicalculator.MainActivity" >

    <TableRow
        android:id="@+id/tableRow0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center">
		
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI Calculator"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/changeUnitsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metric Units" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/heightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Height (metres):" />

        <EditText
            android:id="@+id/editHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Weight (kilograms):" />

        <EditText
            android:id="@+id/editWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:gravity="center">

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate BMI" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/BMIDisplayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI: " />

        <EditText
            android:id="@+id/BMIeditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:inputType="numberDecimal"
            android:text="0.00" />
    </TableRow>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:columnCount="2"
        android:gravity="center"
        android:horizontalSpacing="9dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="9dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_gravity="fill_horizontal"
            android:background="#2E2EFE"
            android:gravity="center_vertical"
            android:text="BMI SCALE"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_gravity="fill_horizontal"
            android:background="#2E2EFE"
            android:gravity="center"
            android:paddingLeft="6dip"
            android:text="Result"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_gravity="left"
            android:background="@android:color/white"
            android:text="Underweight"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView4"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="Less than 18.5"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView5"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/white"
            android:text="Normal"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/white"
            android:text="between 18.5 and 24.9"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView7"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/white"
            android:text="Overweight"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView8"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/white"
            android:text="between 25 and 29.9"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView9"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/white"
            android:text="Obese"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView10"
            android:layout_gravity="fill_horizontal"
            android:background="@android:color/white"
            android:gravity="center"
            android:text="30 or greater"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </GridLayout>

</TableLayout>
